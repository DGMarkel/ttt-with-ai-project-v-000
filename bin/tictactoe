#!/usr/bin/env ruby

require_relative '../config/environment'
=begin
  def game_logic
    input = gets.strip

    if input.to_i > 2
      puts "Nice try, dumbass.  Enter a number from 0 - 2"
      game_logic
    elsif input.to_i == 0
      game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Computer.new("O"))
      game.play
    elsif input.to_i == 1
      puts "Guess you couldn't find any friends willing to play with you. Wah Wah.  Would you like to play as X or O?"
      player_input = gets.strip
      if player_input == "X"
        game = Game.new(player_1 = Players::Human.new(player_input), player_2 = Players::Computer.new("O"))
        game.play
      elsif player_input == "O"
        game = Game.new(player_1 = Players::Human.new(player_input), player_2 = Players::Computer.new("X"))
        game.play
      end
    elsif input.to_i == 2
      puts "Great, you've found a friend willing to play this stupid game with you!"
      puts "Let's get started!"
      game = Game.new
      game.play
    end
  end

  puts "This is a game of tic-tac-toe, the game so easy to win that only a shitty AI will lose!"
  puts "Try your luck against said AI, or, if you prefer, against another human."
  puts "If you're spectacularly bored, you can even watch two AI players duke it out."
  puts "Please enter the number of human players below, from 0 - 2."
  game_logic
=end
TicTacToeCLI.new
